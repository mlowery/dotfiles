# this should be the last line of .bash_profile (which is for login shells only)

# if tmux not running
# and this is ssh connection
# and tmux is installed
# attach to existing session
# or create new one
if _dot_is_login_shell && [[ -z $TMUX && -n $SSH_CONNECTION ]] && _dot_on_path tmux; then
    tmux has-session && tmux attach || tmux
fi
