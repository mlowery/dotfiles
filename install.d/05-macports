if _dot_is_osx; then
    if _dot_on_path port; then

        # always install bash completions if available
        if ! grep '+bash_completion' /opt/local/etc/macports/variants.conf &> /dev/null; then
            echo '+bash_completion' | sudo tee -a /opt/local/etc/macports/variants.conf
        fi

        sudo port selfupdate
        sudo port upgrade outdated
        sudo port install bash
        sudo port install bash-completion
        sudo port install git +bash_completion
        sudo port install coreutils
        sudo port install findutils
        sudo port install grep
        sudo port install gsed
        sudo port install wget
        sudo port install gnutar
        sudo port install tree
        sudo port install watch

        # godep
        sudo port install mercurial

        sudo port install docker
        sudo port install docker-machine
        sudo port install docker-compose
    else
        echo "WARNING: MacPorts not installed"
    fi
fi