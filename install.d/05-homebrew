if _dot_is_osx; then
    if _dot_on_path brew; then
        for f in bash bat coreutils dep exa fd findutils gawk git git-crypt gnu-sed gnu-tar gnupg go grc grep hub jq krew kustomize less lnav make mercurial moreutils openssh ripgrep starship stern tree vim watch wget zsh; do
