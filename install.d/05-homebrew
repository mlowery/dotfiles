if _dot_is_osx; then
    if _dot_on_path brew; then

        echo "INFO: Setting permissions for HomeBrew; sudo prompt to follow"
        sudo chown -R $(whoami) /usr/local/bin
        chmod u+w /usr/local/bin

        _dot_brew_installed_list=$(brew list --formula)

        function _dot_brew_installed {
            local f=${1?f is required}
            echo "$_dot_brew_installed_list" | grep ^${f}$ > /dev/null
            return $?
        }

        function _dot_brew_install {
            local f=${1?f is required}
            if ! _dot_brew_installed $f; then
                brew install $f
            fi
        }

        # Make sure weâ€™re using the latest Homebrew.
        brew update

        # Upgrade any already-installed formulae.
        brew upgrade

        for f in bash bat cfssl coreutils dep dos2unix exa fd ffmpeg findutils gawk git git-crypt git-delta gnu-sed gnu-tar gnupg go graphviz grc grep hub jq kind krew kustomize less lnav make minio/stable/mc mercurial moreutils openssh ripgrep starship stern t-rec tree vim watch wget zsh; do
            _dot_brew_install $f
        done

        # Remove outdated versions from the cellar.
        brew cleanup
    else
        echo "WARNING: HomeBrew not installed"
    fi
fi

fd -L --type d gnubin /usr/local/opt > ~/.path
