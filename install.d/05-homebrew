if _dot_is_osx; then
    if _dot_on_path brew; then
        for f in bash bat coreutils dep fd findutils gawk git git-crypt gnu-sed gnu-tar gnupg go grc grep hub jq kustomize less lnav make moreutils openssh ripgrep stern tree vim watch wget zsh; do
